<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/about_back"/>


    <TextView
        android:id="@+id/texta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="高新园区证件办理"
        android:textSize="24sp"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="36dp"/>

    <LinearLayout
        android:id="@+id/about_function"
        android:layout_below="@id/texta"
        android:layout_marginTop="130dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@mipmap/about_func"
            android:layout_marginLeft="36dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:text="功能介绍"
            android:textSize="14sp"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/about_suggestion"
        android:layout_below="@id/texta"
        android:layout_marginTop="170dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@mipmap/about_suggestion"
            android:layout_marginLeft="36dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:text="意见反馈"
            android:textSize="14sp"
            android:gravity="center_vertical"/>

    </LinearLayout>


    <TextView
        android:id="@+id/team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3G实验室出品"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="36dp"
        android:textSize="12sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copyright 2017 3G. All Rights Reserved"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="36dp"
        android:textSize="10sp"/>

</RelativeLayout>
